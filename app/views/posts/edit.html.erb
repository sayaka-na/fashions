<section class="hero">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        投稿編集
      </h1>
    </div>
  </div>
</section>
<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-6">
        <%= form_with(model: @post, local: true) do |f| %>
          <%= render 'layouts/error_messages', model: f.object %>
          <div class="field">
            <%= f.label :title, "タイトル", class: "label" %>
            <%= f.text_field :title, class: "input" %>
          </div>
          
          <div class="field">
            <%= f.label :content, "内容", class: "label" %>
            <%= f.text_area :content, class: "textarea" %>
          </div>
          
          <div class="field">
            <%= f.label :image, "写真", class: "label" %>
            <%= f.file_field :image, class: "input" %>
          </div>
          
          <%= f.submit '投稿', class: "button is-normal is-success is-outlined" %>
        <% end %>
      </div>
    </div>
  </div>
</section>